@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid mt-4" dir="ltr">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">System Overview</h1>
        <button class="btn btn-sm btn-primary shadow-sm" onclick="window.print()">
            <i class="bi bi-download"></i> Generate Report
        </button>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-md-6">
            <div class="card border-left-primary shadow h-100 py-2 border-0 border-start border-primary border-5">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Administrators</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12 Active</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-person-badge fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-left-success shadow h-100 py-2 border-0 border-start border-success border-5">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Employees</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">84 Staff</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-briefcase fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card border-left-info shadow h-100 py-2 border-0 border-start border-info border-5">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Customers</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">1,420 Active</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-6 col-md-12">
            <div class="card shadow border-0 bg-dark text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-secondary small">Total Sales Volume</h6>
                            <h2 class="display-6 fw-bold">$245,800.00</h2>
                            <p class="text-success mb-0"><i class="bi bi-graph-up-arrow"></i> +8.5% from last month</p>
                        </div>
                        <div class="bg-primary p-3 rounded-circle">
                            <i class="bi bi-cart-check fs-1 text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-md-12">
            <div class="card shadow border-0 bg-dark text-white;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-light small opacity-75">Net Profit</h6>
                            <h2 class="display-6 fw-bold">$84,120.50</h2>
                            <p class="text-light mb-0"><i class="bi bi-shield-check"></i> Target Achieved: 92%</p>
                        </div>
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle">
                            <i class="bi bi-cash-stack fs-1 text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card shadow border-0">
                <div class="card-header bg-light py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Live Operations Status</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-1">Server Performance</p>
                    <div class="progress mb-4" style="height: 8px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"></div>
                    </div>
                    <p class="small text-muted mb-1">Monthly Sales Quota</p>
                    <div class="progress mb-4" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 90%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body { background-color: #f4f7f6; font-family: 'Inter', sans-serif; }
    .card { border-radius: 12px; transition: all 0.3s; }
    .card:hover { transform: scale(1.02); }
    .text-xs { font-size: .75rem; }
    .text-gray-300 { color: #dddfeb !important; }
    .text-gray-800 { color: #5a5c69 !important; }
</style>
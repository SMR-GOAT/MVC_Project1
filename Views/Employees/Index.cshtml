@{
    ViewData["Title"] = "Employees";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm mb-4 bg-white">
        <div class="card-body d-flex justify-content-between align-items-center p-4">
            <div>
                <h3 class="mb-0 fw-bold text-secondary">Employee Directory</h3>
                <small class="text-muted">Visual Preview (Static Data)</small>
            </div>
            <button class="btn btn-primary px-4 shadow-sm">
                Add New Employee
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4 py-3 fw-semibold small text-uppercase">ID</th>
                        <th class="py-3 fw-semibold small text-uppercase">Full Name</th>
                        <th class="py-3 fw-semibold small text-uppercase">Email Address</th>
                        <th class="py-3 fw-semibold small text-uppercase">Position</th>
                        <th class="py-3 fw-semibold small text-uppercase text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 text-muted small">#101</td>
